<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aghajari.sample.axrlottie">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".AXrLottieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.Lottie2GifActivity"/>
        <activity android:name=".activity.ColorLayerActivity" />
        <activity android:name=".activity.LottieEditorActivity" />
        <activity android:name=".activity.MarkerActivity" />
        <activity android:name=".activity.SimpleActivity" />
        <activity android:name=".activity.SimpleNetworkActivity" />

        <activity
            android:name=".activity.AXEmojiViewActivity"
            android:windowSoftInputMode="adjustResize|adjustNothing" />

    </application>

</manifest>