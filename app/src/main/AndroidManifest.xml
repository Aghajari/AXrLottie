<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".AXrLottieApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.Lottie2GifActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ColorLayerActivity"
            android:exported="true" />
        <activity
            android:name=".activity.LottieEditorActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MarkerActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SimpleActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SimpleNetworkActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AXEmojiViewActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize|adjustNothing" />

    </application>

</manifest>